{
  "name": "lm-studio-assistant",
  "productName": "LM Studio Web-Assistent",
  "version": "1.0.0",
  "description": "Eine Electron-App, die LM Studio mit Websuche verbindet",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "lm-studio",
    "llm",
    "ai",
    "chat",
    "web-search",
    "electron"
  ],
  "author": {
    "name": "LM Studio Web-Assistent",
    "email": ""
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.0.3",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^25.8.4",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.lmstudio.assistant",
    "productName": "LM Studio Web-Assistent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*/.bin",
      "!**/dist/**/*",
      "!**/.git/**/*",
      "!**/.vscode/**/*",
      "!**/{.DS_Store,.git,.gitattributes,.gitignore}"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LM Studio Web-Assistent"
    },
    "asarUnpack"          : [
      "**/node_modules/axios/**"
    ]
  }
}
